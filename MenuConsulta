def realizar_login():
    usuario = input("Digite o nome de usuário: ")
    senha = input("Digite a senha: ")

    try:
        with open('usuarios.txt', 'r') as arquivo:
            linhas = arquivo.readlines()
            for linha in linhas:
                usuario_arquivo, senha_arquivo = linha.strip().split(',')
                if usuario == usuario_arquivo and senha == senha_arquivo:
                    print("Login bem-sucedido!")
                    return True
                else:
                    print("Usuário ou senha incorreto")
                    return False 
                
    except FileNotFoundError:
        with open('usuarios.txt', 'w') as arquivo:
            pass
        
        cadastrar_usuario_senha()  
        return True

def cadastrar_usuario_senha():
    usuario = input("Digite o nome de usuário: ")
    senha = input("Digite a senha: ")
    
    with open('usuarios.txt', 'a') as arquivo:
        
        arquivo.write(f"{usuario},{senha}\n")

    print("Usuário cadastrado com sucesso!")
    print("Agora realize o Login")
    realizar_login()
    

def agendar_consulta():
    nome_paciente = input("Digite o nome do paciente: ")
    data_consulta = input("Digite a data da consulta (DD/MM/AAAA): ")
    hora_consulta = input("Digite a hora da consulta (HH:MM): ")
    medico = input("Digite o nome do médico: ")

    with open('consultas.txt', 'a') as arquivo:
        arquivo.write(f"{nome_paciente},{data_consulta},{hora_consulta},{medico}\n")

    print("Consulta agendada com sucesso!")